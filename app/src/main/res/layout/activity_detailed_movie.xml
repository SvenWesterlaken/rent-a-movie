<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.svenwesterlaken.rentamovie.presentation.ActivityDetailedMovie">

    <TextView
        android:id="@+id/movie_TV_title"
        android:layout_width="368dp"
        android:layout_height="28dp"
        android:text="title"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/ActivityDetailedMovie_TV_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="59dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_TV_title"
        android:layout_marginStart="59dp" />

    <TextView
        android:id="@+id/ActivityDetailedMovie_TV_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginRight="59dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_TV_title"
        android:layout_marginEnd="59dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/Inventory_RV_content"
        android:layout_width="372dp"
        android:layout_height="414dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_TV_title"
        app:layout_constraintVertical_bias="0.377"
        tools:layout_editor_absoluteX="6dp"
        tools:listitem="@layout/row_detailedmovie_list" />

</android.support.constraint.ConstraintLayout>
